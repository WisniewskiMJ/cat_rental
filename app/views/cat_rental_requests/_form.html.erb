<% if !flash.empty? %>
  <% cat_id = flash[:cat_id] %>
<% end %>
<form action="<%= cat_rental_requests_url %>" method="post">

  <input type="hidden"
       name="authenticity_token"
       value="<%= form_authenticity_token %>">

  <% if !cat_id %>
    <div class="field">
      <label class="label" for="cat_id">Select a cat</<label>
      <div class="control">
        <div class="select">
          <select name="cat_rental_request[cat_id]">
            <option disabled selected>- pick one -</option>
            <% cats.each do |cat| %>
            <option value="<%= cat.id %>"><%= cat.name %></option>
            <% end %>
          </select>
        </div>
      </div>
    </div>
    <br>
  <% else %>
    <h2 class="title is-2"> <%= cats.find(cat_id).name %> </h2>
    <input type="hidden" name="cat_rental_request[cat_id]" value="<%= cat_id %>">
  <% end %>

  <div class="field">
    <label class="label" for="start_date">Start date</label>
    <input class="date input" type="date" name="cat_rental_request[start_date]"/>
  </div>

  <div class="field">
    <label class="label" for="end_date">End date</label>
    <input class="date input" type="date" name="cat_rental_request[end_date]">
  </div>

  <input class="button is-small is-secondary" type="submit" value="Send request">

</form>
